{
  "name": "@hirakinii-packages/kaken-api-client-typescript",
  "version": "0.1.2",
  "description": "TypeScript/Node.js client library for the KAKEN (科学研究費助成事業データベース) API",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": {
    "./dist/cache.js": "./dist/cache.browser.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'",
    "format": "prettier --write '{src,tests}/**/*.{ts,tsx}'",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run format && npm run lint && npm run type-check && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirakinii/kaken-api-client-typescript.git"
  },
  "keywords": [
    "kaken",
    "科研費",
    "jsps",
    "research",
    "api",
    "client",
    "typescript",
    "node"
  ],
  "author": "hirakinii",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bugs": {
    "url": "https://github.com/hirakinii/kaken-api-client-typescript/issues"
  },
  "homepage": "https://github.com/hirakinii/kaken-api-client-typescript#readme",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "fast-xml-parser": "^5.3.7",
    "zod": "^4.3.6"
  }
}
